<% include ../partials/_header %>

<div class="container">
  
  <div class="row">
    <!--FORM-->

    <div class="col-md-3">
      <div class="card">
        <div class="card-body">

          <form action="revistas" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="nombre" placeholder="Titulo" required=true>
            </div>
            <div class="form-group">
              <input class="form-control" type="number" name="codigo" placeholder="Codigo" required=true>
            </div>
            <div class="form-group">
              <input class="form-control" type="number" name="zona" placeholder="Zona" required=true>
            </div>
            <div class="form-group">
              <textarea class="form-control" name="description" cols="80" placeholder="Description"></textarea>
            </div>
            <button class="btn btn-primary " type="submit">
              Add
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- LIST -->
    <div class="col-md-9">
      <table class="table table-bordered table-hover table table-sm text-center">
        <thead class="thead-dark">
          <tr>
            <th>NÂ°</th>
            <th>Nombre</th>
            <th>Codigo</th>
            <th>Zona</th>
            <th>Descripcion</th>
            <th>id objeto</th>
            <th>Options</th>
            <!-- <th>Status</th> -->
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < revistas.length; i++) { %>
          <tr>
            <td><%= i + 1%></td>
            <td><strong><%= revistas[i].nombre %></strong></td>
            <td><strong><%= revistas[i].codigo %></strong></td>
            <td><strong><%= revistas[i].zona %></strong></td>
            <td><%= revistas[i].description %></td>
            <td><%= revistas[i]._id %></td>
            <td>
              <a href="/turn2/<%= revistas[i]._id %>" class="btn btn-outline-success">
                Crear edicion</a>
              <a href="/delete2/<%= revistas[i]._id %>" class="btn btn-danger">
                Borrar
              </a>
              <a href="/revista_edit/<%= revistas[i]._id %>" class="btn btn-info">
                Editar 
              </a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

</div>